{{!-- Groqsters Feature Banner Component --}}

{{#if showFeatureBanner}}
  <div class="groqsters-feature-banner">
    <div class="feature-cards-row">
      
      {{!-- First Feature Card --}}
      {{#if featureBannerItem1Url}}
        <a href="{{featureBannerItem1Url}}" class="feature-card" {{#if (starts-with featureBannerItem1Url "http")}}target="_blank"{{/if}}>
      {{else}}
        <div class="feature-card">
      {{/if}}
        <div class="feature-card-image">
          {{#if featureBannerItem1Image}}
            <img src="{{featureBannerItem1Image}}" alt="{{#if featureBannerItem1Title}}{{featureBannerItem1Title}}{{else}}Fast & Powerful{{/if}}">
          {{else}}
            <div class="feature-card-placeholder">‚ö°</div>
          {{/if}}
        </div>
        <div class="feature-card-text">
          <h3 class="feature-card-title">{{#if featureBannerItem1Title}}{{featureBannerItem1Title}}{{else}}Fast & Powerful{{/if}}</h3>
        </div>
      {{#if featureBannerItem1Url}}
        </a>
      {{else}}
        </div>
      {{/if}}

