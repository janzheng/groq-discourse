{{!-- Groqsters Theme Custom Header Template --}}

{{#if customHeaderText}}
  <div class="custom-header-text">
    {{customHeaderText}}
  </div>
{{/if}}

{{!-- Enhanced header with custom branding --}}
<header class="d-header groqsters-header">
  {{#if site.logo_url}}
    <div class="logo-wrapper">
      <a href="{{site.base_url}}" class="logo-link">
        <img src="{{site.logo_url}}" alt="{{site.title}}" class="logo-image">
      </a>
    </div>
  {{/if}}
  
  {{!-- Custom navigation enhancement --}}
  <nav class="header-nav">
    {{#unless showWelcomeBanner}}
      {{#if currentUser}}
        <div class="user-menu-wrapper">
          <span class="welcome-text">Welcome back, {{currentUser.username}}!</span>
        </div>
      {{else}}
        <div class="guest-actions">
          <a href="/login" class="btn btn-groqsters login-button">Sign In</a>
          <a href="/signup" class="btn btn-groqsters signup-button">Join Us</a>
        </div>
      {{/if}}
    {{/unless}}
  </nav>
</header>

{{!-- Welcome banner for homepage --}}
{{#if showWelcomeBanner}}
  <div class="welcome-banner groqsters-fade-in">
    {{#if currentUser}}
      <h1>{{welcomeBannerHeaderLoggedIn}}</h1>
    {{else}}
      <h1>{{welcomeBannerHeaderGuest}}</h1>
    {{/if}}
    <h2>{{welcomeBannerSubtitle}}</h2>
    
    {{#if showBannerSearch}}
      {{!-- Search bar in banner --}}
      <div class="banner-search">
        <div class="search-container">
          <input type="text" placeholder="Search" class="search-input">
          <button class="search-button">
            <svg class="search-icon" width="20" height="20" viewBox="0 0 20 20">
              <path fill="currentColor" d="M14.386 14.386l4.0877 4.0877-1.4142 1.4142-4.0877-4.0877C11.8352 16.3385 10.0578 17 8.1429 17 3.6467 17 0 13.3533 0 8.8571 0 4.3609 3.6467 0.7142 8.1429 0.7142c4.4962 0 8.1428 3.6467 8.1428 8.1429 0 1.9149-0.6615 3.6923-1.8999 5.5289zM8.1429 15.1429c3.5829 0 6.4286-2.8457 6.4286-6.4286 0-3.5829-2.8457-6.4286-6.4286-6.4286-3.5829 0-6.4286 2.8457-6.4286 6.4286 0 3.5829 2.8457 6.4286 6.4286 6.4286z"/>
            </svg>
          </button>
        </div>
      </div>
    {{/if}}
  </div>
{{/if}} 