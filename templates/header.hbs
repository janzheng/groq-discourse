{{!-- Groqsters Theme Custom Header Template --}}

{{#if customHeaderText}}
  <div class="custom-header-text">
    {{customHeaderText}}
  </div>
{{/if}}

{{!-- Enhanced header with custom branding --}}
<header class="d-header groqsters-header">
  {{#if site.logo_url}}
    <div class="logo-wrapper">
      <a href="{{site.base_url}}" class="logo-link">
        <img src="{{site.logo_url}}" alt="{{site.title}}" class="logo-image">
      </a>
    </div>
  {{/if}}
  
  {{!-- Custom navigation enhancement --}}
  <nav class="header-nav">
    {{#if currentUser}}
      <div class="user-menu-wrapper">
        <span class="welcome-text">Welcome back, {{currentUser.username}}!</span>
      </div>
    {{else}}
      <div class="guest-actions">
        <a href="/login" class="btn btn-groqsters login-button">Sign In</a>
        <a href="/signup" class="btn btn-groqsters signup-button">Join Us</a>
      </div>
    {{/if}}
  </nav>
</header>

{{!-- Welcome banner for homepage --}}
{{#if showWelcomeBanner}}
  <div class="welcome-banner groqsters-fade-in">
    {{#if currentUser}}
      <h2>Welcome back, {{currentUser.username}}!</h2>
      <p>Find help, share your knowledge, and experience fast inference</p>
    {{else}}
      <h2>Welcome to Our Community</h2>
      <p>Find help, share your knowledge, and experience fast inference</p>
    {{/if}}
  </div>
{{/if}} 